def mariokart():
    print("1)1-player")
    print("2)2-player")
    print("3)Online")
    print("4)Exit")
mariokart()

choice = int(input("What number do you want to select"))

def option(choice):
    if choice == 1:
        print("1 player selected")
        if choice == 2:
            print("2 player selected")
            if choice == 3:
                print("Online selected")
                if choice == 4:
                    print("Exit")
option(choice)

